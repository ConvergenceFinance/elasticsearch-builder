{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./dist",
        "module": "commonjs",
        "noImplicitAny": true,
        "lib": [
            "es2016",
            "esnext.asynciterable"
        ],
        "outDir": "./dist",
        "target": "es5",
        "moduleResolution": "node",
        "strict": true,
        "types": [
            "jest"
        ]
    },
    "typedocOptions": {
        "mode": "modules",
        "out": "docs"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules", "dist"]
}